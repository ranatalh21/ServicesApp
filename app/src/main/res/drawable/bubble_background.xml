<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FF5722" /> <!-- Change this color to your desired background color -->
        </shape>
    </item>
    <!-- Inner Circle (for shadow effect) -->
    <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#33000000" /> <!-- Change this color for shadow effect -->
        </shape>
    </item>
</layer-list>